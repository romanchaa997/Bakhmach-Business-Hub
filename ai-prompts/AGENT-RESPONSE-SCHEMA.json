{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UHIP/Audityzer Agent Response Schema",
  "type": "object",
  "required": ["type", "status", "data", "metadata"],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["architecture_query", "api_reference", "troubleshooting", "code_sample", "compliance_check"],
      "description": "Type of response"
    },
    "status": {
      "type": "string",
      "enum": ["success", "error", "partial"],
      "description": "Response status"
    },
    "data": {
      "type": "object",
      "description": "Structured response content",
      "properties": {
        "answer": { "type": "string" },
        "code": { "type": "string" },
        "examples": { "type": "array" },
        "warnings": { "type": "array", "items": { "type": "string" } }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["source", "generated_at"],
      "properties": {
        "source": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Sources referenced"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "generated_at": {
          "type": "string",
          "format": "date-time"
        },
        "version": { "type": "string" }
      }
    }
  }
}
